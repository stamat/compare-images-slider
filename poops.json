{
  "scripts": [{
    "in": "src/scripts/iife.js",
    "out": "dist/compare-images-slider.js",
    "options": {
      "sourcemap": true,
      "minify": true,
      "justMinified": false,
      "format": "iife",
      "target": "es2019"
    }
  }],
  "styles": [{
    "in": "src/styles/index.scss",
    "out": "dist/compare-images-slider.css",
    "options": {
      "sourcemap": true,
      "minify": true,
      "justMinified": false
    }
  },
  {
    "in": "src/styles/site.scss",
    "out": "dist/site.css",
    "options": {
      "sourcemap": true,
      "minify": true,
      "justMinified": false
    }
  }],
  "markup": {
    "in": "src/markup",
    "out": "/",
    "options": {
      "site": {
        "title": "Compare Images Slider",
        "description": "A simple slider for comparing two images visually.",
        "url": "https://stamat.github.io/compare-images-slider"
      },
      "data": [
        "_data/fonts.yaml"
      ],
      "includePaths": [
        "_layouts",
        "_partials"
      ],
      "timeDateFormat": "MMM D, YYYY"
    }
  },
  "banner": "/* {{ name }} v{{ version }} | {{ homepage }} | {{ license }} License */",
  "serve" : {
    "port": 4040,
    "base": "/"
  },
  "livereload": true,
  "watch": [
    "src"
  ],
  "includePaths": [
    "node_modules"
  ]
}
